<%- include('../../partials/header.ejs') -%> <%-
include('../../partials/navbar.ejs') -%>
<div class="container">
  <hr />
  <div class="card">
    <div class="card-header">
      <h2>Novo artigo</h2>
    </div>
    <div class="card-body">
      <form method="POST" action="/articles/save">
        <input
          type="text"
          name="title"
          class="form-control"
          placeholder="Defina o tÃ­tulo do artigo"
        /><br />
        <textarea
          class="form-control"
          name="body"
          id="article"
          placeholder="Escreva o artigo aqui"
        ></textarea
        ><br />
        <label> Categoria </label>
        <select class="form-control" name="category">
          <% categories.forEach((category) => { %>
          <option value="<%= category.id %>"><%= category.title %></option>
          <% }) %>
        </select>
        <br />
        <button class="btn btn-success">Cadastrar</button>
      </form>
    </div>
  </div>
</div>
<%- include('../../partials/footer.ejs') -%>
<script src="/tinymce/tinymce.min.js"></script>
<script>
  tinymce.init({
    selector: "#article",
    plugins: [
      "advlist autolink image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save tables paste emoticons table",
    ],
  });
</script>
